<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_payment_term_line_form_discount_product" model="ir.ui.view">
            <field name="name">account.payment.term.line.form.discount.product</field>
            <field name="model">account.payment.term.line</field>
            <field name="priority" eval="30"/>
            <field name="inherit_id" ref="account.view_payment_term_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/group" position="inside">
                    <group>
                        <field string="Discount Product" name="discount_product"
                               attrs="{'invisible':[('value','!=', 'discount')],'required':[('value','=', 'discount')]}"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
